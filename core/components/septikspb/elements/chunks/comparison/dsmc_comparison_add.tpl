<div class="comparison comparison-[[+list]][[+added]][[+can_compare]]" data-id="[[+id]]" data-list="[[+list]]">
    <a href="#" class="comparison-add comparison-link" data-text="[[%comparison_updating_list]]">
        <svg class="svg-icon svg-icon-sm svg-icon-gray-600">
            <use xlink:href="#icon-comparison"></use>
        </svg>
    </a>
    <a href="#"
       class="comparison-remove comparison-link"
       data-text="[[%comparison_updating_list]]">
        <svg class="svg-icon svg-icon-sm svg-icon-primary">
            <use xlink:href="#icon-comparison"></use>
        </svg>
    </a>
    {*
    <a href="[[+link]]" class="comparison-go">[[%comparison_go_to_list]]</a>
    <span class="comparison-total">[[+total]]</span>
    *}
</div>